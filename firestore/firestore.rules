rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /favorites/{favorite} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    match /dohaViews/{dohaId} {
      allow read: if true;
      allow create, update: if request.auth != null || request.resource.data.dohaId == dohaId;
      // Allow unauthenticated users to increment view count via API? 
      // Actually the rules should permit the API (which uses Admin SDK) regardless.
      // But client-side Snapshot listener needs read.
      // FavoriteContext needs write (updateFavoriteCount).
    }
  }
}
